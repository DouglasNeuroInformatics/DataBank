{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "eslint.config.js", "tsconfig.base.json", "prettier.config.js"],
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": ["db:generate"],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "inputs": ["prisma/**/*"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["db:generate"],
      "persistent": true
    },
    "format": {},
    "lint": {
      "dependsOn": ["db:generate"]
    },
    "test": {
      "dependsOn": ["db:generate"]
    },
    "start:test-server": {
      "dependsOn": ["db:generate"],
      "persistent": true
    }
  }
}
