enum UserVerificationMethod {
  MANUAL
  CONFIRM_EMAIL
  REGEX_EMAIL
}

type UserVerificationStrategy {
  kind       UserVerificationMethod
  emailRegex String?
}

model Setup {
  id                       String                   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt                DateTime                 @default(now()) @db.Date
  updatedAt                DateTime                 @default(now()) @updatedAt @db.Date
  userVerificationStrategy UserVerificationStrategy
}
